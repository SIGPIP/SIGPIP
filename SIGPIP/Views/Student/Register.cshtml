<section>
  <div class="mask d-flex align-items-center">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-left mb-4">Register</h2>
              <form method="POST" asp-action="Register" autocomplete="off">
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="studentNames" class="control-label"></label>
                        <input asp-for="studentNames" class="form-control" />
                        <span asp-validation-for="studentNames" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="studentLastNames" class="control-label"></label>
                        <input asp-for="studentLastNames" class="form-control" />
                        <span asp-validation-for="studentLastNames" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="studentEmail" class="control-label"></label>
                        <input asp-for="studentEmail" class="form-control" />
                        <span asp-validation-for="studentEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="studentPassword" class="control-label"></label>
                        <input asp-for="studentPassword" class="form-control" />
                        <span asp-validation-for="studentPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="studentConfirmPassword" class="control-label"></label>
                        <input asp-for="studentConfirmPassword" class="form-control" />
                        <span asp-validation-for="studentConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="studentCareer" class="control-label"></label>
                        <input asp-for="studentCareer" class="form-control" />
                        <span asp-validation-for="studentCareer" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="studentSemester" class="control-label"></label>
                        <input asp-for="studentSemester" class="form-control" />
                        <span asp-validation-for="studentSemester" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="studentCountry" class="control-label"></label>
                        <input asp-for="studentCountry" class="form-control" />
                        <span asp-validation-for="studentCountry" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="studentBio" class="control-label"></label>
                        <input asp-for="studentBio" class="form-control" type="textarea"/>
                        <span asp-validation-for="studentBio" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <input type="submit" value="Register" class="btn btn-primary" />
                    </div> 
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @if (TempData["errorRegister"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Error!", '@TempData["errorRegister"]', "error");
                };
            </script>
        }

     @if (TempData["emailExists"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Error!", '@TempData["emailExists"]', "error");
                };
            </script>
        }
}
