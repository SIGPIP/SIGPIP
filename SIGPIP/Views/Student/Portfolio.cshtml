    <script>
        var studentId = '@(ViewBag.studentIdLogged)';
        var experienceToDelete = -1;
        var habilityToDelete = -1;
        var interestToDelete = -1;
        
        $('#studenExperienceContainer').ready(
            function(){
                $.ajax({
                    type: 'GET',
                    url: '/Portfolio/GetWorkExperience',
                    data: { studentId: studentId},
                    success: function(experience){
                        for(var i = 0; i < experience.length; i++){
                            var container = document.getElementById('studenExperienceContainer');
                            var containerContent = container.innerHTML;
                            var experienceCard = '<div class="row mt-2 col-lg-6 experience-card" style="margin-left: 5px;"><div class="col-md-4 experience-card-header" style="background: #69CFFB;color: #010101;padding: 10px;border-top-left-radius: 12px;border-bottom-left-radius: 12px;"><h4 style="margin-bottom: 0;">'+experience[i].experienceName+'</h4><p style="margin-bottom: 0;">'+experience[i].experiencePlace+'</p><p style="margin-bottom: 0;">'+experience[i].experienceEntity+'</p><p style="margin-bottom: 0;">'+experience[i].experienceStartDate.substring(0, 10)+'</p></div><div class="col-md-8 experience-card-body" style="padding: 10px;color: #010101;box-shadow: rgb(0 0 0 / 10%) 0px 0px 5px 0px, rgb(0 0 0 / 10%) 0px 0px 1px 0px;border-top-right-radius: 12px;border-bottom-right-radius: 12px;"><p>'+experience[i].experienceDescription+'</p></div><div class="experience-options"><button class="experience-edit" data-toggle="collapse" data-target="#collapseAddExperience" aria-controls="collapseAddExperience"><i class="fas fa-pen"><div style="display: none;">'+experience[i].experienceId+'</div></i></button><button class="experience-delete"><i class="fas fa-trash"><div style="display: none;">'+experience[i].experienceId+'</div></i></button></div></div>';
                            container.innerHTML = containerContent + experienceCard;
                        }

                        var deleteExperience = document.getElementsByClassName('experience-delete');

                        for(var i = 0; i < deleteExperience.length; i++){
                            deleteExperience[i].addEventListener('click', function (event) {
                                experienceToDelete = event.target.querySelector('div').innerHTML;;
                                console.log(experienceToDelete);
                                $('#confirmationModal').modal('show');

                                $('#deleteData').on('click', function(event) {
                                    var experienceid = experienceToDelete;
                                    console.log(experienceid);
                                    $.ajax({
                                        type: 'delete',
                                        url: '/portfolio/deleteworkexperience',
                                        data: { experienceid: experienceid},
                                        success: function(){
                                            window.location.reload();
                                        }
                                    })
                                });

                                $('#cancelExperience').on('click', function(event) {
                                    experienceToDelete = -1;
                                });
                            });
                        }

                        var editExperience = document.getElementsByClassName('experience-edit');

                        for(var i = 0; i < editExperience.length; i++){
                            editExperience[i].addEventListener('click', function (event) {
                                experienceId = event.target.querySelector('div').innerHTML;
                                
                                $.ajax({
                                    type: 'GET',
                                    url: '/Portfolio/GetSingleWorkExperience',
                                    data: { experienceId: experienceId},
                                    success: function(experience){
                                        document.getElementById('experienceId').setAttribute('value',experience.experienceId); 
                                        document.getElementById('experienceName').setAttribute('value',experience.experienceName); 
                                        document.getElementById('experienceEntity').setAttribute('value',experience.experienceEntity); 
                                        document.getElementById('experiencePlace').setAttribute('value',experience.experiencePlace); 
                                        document.getElementById('experienceDescription').setAttribute('value',experience.experienceDescription); 
                                        document.getElementById('experienceStartDate').setAttribute('value',experience.experienceStartDate.substring(0, 10)); 
                                        
                                    }
                                });
                            });
                        }
                    }
                });

            }

        )

        $('#studenHabilitiesContainer').ready(
            function(){
                $.ajax({
                    type: 'GET',
                    url: '/Portfolio/GetHabilities',
                    data: { studentId: studentId },
                    success: function(hability){
                        for(var i = 0; i < hability.length; i++){
                            var container = document.getElementById('studenHabilitiesContainer');
                            var containerContent = container.innerHTML;
                            var habilityTag = '<div class="hability-tag d-inline" style="color: #010101; margin: 5px;"><div style="padding: 2px 5px; background: #69CFFB";>'+hability[i].habilityName+'</div><div class="hability-options"><button class="hability-edit" data-toggle="collapse" data-target="#collapseAddHability" aria-controls="collapseAddHability"><i class="fas fa-pen"><div style="display: none;">'+hability[i].habilityId+'</div></i></button><button class="hability-delete"><i class="fas fa-trash"><div style="display: none;">'+hability[i].habilityId+'</div></i></button></div></div></div>';
                            container.innerHTML = containerContent + habilityTag;
                        }

                        var deleteHability = document.getElementsByClassName('hability-delete');

                        for(var i = 0; i < deleteHability.length; i++){
                            deleteHability[i].addEventListener('click', function (event) {
                                habilityToDelete = event.target.querySelector('div').innerHTML;;
                                console.log(habilityToDelete);
                                $('#confirmationModal').modal('show');

                                $('#deleteData').on('click', function(event) {
                                    var habilityid = habilityToDelete;
                                    $.ajax({
                                        type: 'delete',
                                        url: '/portfolio/deleteHability',
                                        data: { habilityid: habilityid},
                                        success: function(){
                                            window.location.reload();
                                        }
                                    })
                                });

                                $('#cancelHability').on('click', function(event) {
                                    habilityToDelete = -1;
                                });
                            });
                        }

                        var editHability = document.getElementsByClassName('hability-edit');

                        for(var i = 0; i < editHability.length; i++){
                            editHability[i].addEventListener('click', function (event) {
                                habilityId = event.target.querySelector('div').innerHTML;
                                
                                $.ajax({
                                    type: 'GET',
                                    url: '/Portfolio/GetSingleHability',
                                    data: { habilityId: habilityId},
                                    success: function(hability){
                                        document.getElementById('habilityId').setAttribute('value',hability.habilityId); 
                                        document.getElementById('habilityName').setAttribute('value',hability.habilityName); 
                                    }
                                });
                            });
                        }
                    }
                });

            }

        )

        $('#studentInterestContainer').ready(
            function(){
                $.ajax({
                    type: 'GET',
                    url: '/Portfolio/GetInterests',
                    data: { studentId: studentId },
                    success: function(interest){
                        for(var i = 0; i < interest.length; i++){
