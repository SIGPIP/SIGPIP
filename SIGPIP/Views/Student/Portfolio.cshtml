@{
    Layout = "~/Views/Layouts/App.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Portfolio
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fas fa-compass"></i> Home</li>
            <li class="breadcrumb-item active">Portfolio</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <H5><p align="justify" ;>In this section you can include all your professional experience, certificates, favorite projects and others that you consider important in your professional profile.</p></H5>
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Personal Information</h3>
                <button class="btn"> <i class="fas fa-pencil-alt"></i></button>
                <ul class="box-controls pull-right">
                    <li><a class="box-btn-slide" href="#"></a></li>
                </ul>
            </div>
            <div class="box-body">
                @if (ViewBag.message != null)
                {
                    <script type="text/javascript">
                        window.onload = function(){
                            swal("Success", "The changes made to your Personal Information have been saved correctly", "success");
                        };
                        @*Si quieres obtener los datos de los campos usa -> '@ViewBag.message' y modifica
                            la funcion updatePersonalInfoPortfolio() de StudentController.cs como lo necesites
                        *@
                    </script>
                }
                <form action="/Student/updatePersonalInfoPortfolio" method="post">
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label>Names</label>
                                <input type="text" class="form-control" name="field_Names" />
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label>Last Names</label>
                                <input type="text" class="form-control" name="field_LastNames" />
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label>What country are you from?</label>
                                <input type="text" class="form-control" name="field_Country" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label>What career are you studying?</label>
                                <input type="text" class="form-control" name="field_Career" />
                            </div>
                        </div>
                        <div class="col-4">
                            <label>What semester are you in?</label>
                            <select name="field_Semester" class="form-control select2" style="width: 100%;">
                                <option selected="selected">1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>7</option>
                                <option>8</option>
                                <option>9</option>
                                <option>10</option>
                                <option>11</option>
                                <option>12</option>
                                <option>13</option>
                                <option>14</option>
                                <option>15</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input type="text" class="form-control" name="field_Email" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Your Description: <span class="text-danger">*</span></label>
                                <div class="controls">
                                    <textarea name="field_Bio" id="textarea" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-success">Update Information</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- /.box-footer-->
        </div>
        <!-- /.box -->

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Your Programming Languages or Frameworks</h3>

                <ul class="box-controls pull-right">
                    <li><a class="box-btn-slide" href="#"></a></li>
                </ul>
            </div>
            <div class="box-body">
                <div style="text-align: center;">
                    <i class="fas fa-tools fa-10x"></i>
                </div>
            </div>
        </div>

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Work Experience</h3>

                <ul class="box-controls pull-right">
                    <li><a class="box-btn-slide" href="#"></a></li>
                </ul>
            </div>
        </div>

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Your Licenses and Certifications</h3>

                <ul class="box-controls pull-right">
                    <li><a class="box-btn-slide" href="#"></a></li>
                </ul>
            </div>
        </div>

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Favorite Projects</h3>

                <ul class="box-controls pull-right">
                    <li><a class="box-btn-slide" href="#"></a></li>
                </ul>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>