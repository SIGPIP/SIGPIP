@model IEnumerable<SIGPIP.Models.ProjectModel>

@{
    ViewData["Title"] = "Projects";
}

<div class="box-header with-border">
    <h3 class="box-title">Your Projects</h3>
    <ul class="box-controls pull-right">
        <li><a class="box-btn-slide" href="#"></a></li>
    </ul>
</div>
<div class="box-body">
    <div class="col-12">
        <div class="row">
        @foreach(ProjectModel projectItem in @ViewBag.projects)
        {
            <div class="col-lg-4 col-md-6" style="padding-bottom=150px">
                <div class="card border-dark mb-3">
                    <div class="card-header bg-dark text-white">@projectItem.projectName.ToUpper()</div>
                    <div class="card-body text-dark">
                    <h5 >@projectItem.projectFramework</h5>
                    <br>
                    <p >@projectItem.projectDescription</p>
                    <p >@projectItem.projectRepoLink</p>
                    </div>
                </div>
            </div>
        }
        </div>
        <br>
    </div> 
</div>


